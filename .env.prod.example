# Production Environment Variables
# Copy this file to .env.prod and customize for your production setup
# IMPORTANT: Change all default passwords and secrets!

# Database Configuration
POSTGRES_USER=guard
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=guard
POSTGRES_PORT=5432

# Redis Configuration  
REDIS_PORT=6379

# API Configuration
API_PORT=8080
JWT_SIGNING_KEY=CHANGE_ME_SECURE_JWT_SECRET_AT_LEAST_32_CHARS
PUBLIC_BASE_URL=https://your-domain.com

# Email Configuration (Production SMTP)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=no-reply@your-domain.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://your-app.com

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD
ALERTMANAGER_PORT=9093

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: Reverse Proxy
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
