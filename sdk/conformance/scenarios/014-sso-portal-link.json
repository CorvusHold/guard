    "env": { "TENANT_ID": "{{ADMIN_TENANT_ID}}", "ADMIN_TOKEN": "{{K6_ADMIN_TOKEN}}", "ORG_ID": "{{K6_ORG_ID}}" }
  },
  "requiresEnv": ["TENANT_ID", "ADMIN_TOKEN", "ORG_ID"],
  "steps": [
    {
      "request": {
        "method": "GET",
        "path": "/v1/auth/sso/workos/portal-link?tenant_id={{TENANT_ID}}&organization_id={{ORG_ID}}",
        "headers": { "authorization": "Bearer {{ADMIN_TOKEN}}" }
      },
      "expect": {
        "status": 200,
        "bodyContains": { "link": {} }
      }
    }
  ]
}
