{
  "name": "Magic link send returns 204",
  "requiresEnv": ["TENANT_ID", "EMAIL"],
  "steps": [
    {
      "request": {
        "method": "POST",
        "path": "/api/v1/auth/magic/send",
        "headers": { "content-type": "application/json" },
        "body": {
          "tenant_id": "{{TENANT_ID}}",
          "email": "{{EMAIL}}"
        }
      },
      "expect": { "status": 202 }
    }
  ]
}
