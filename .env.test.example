# Guard CAS - Test Environment Variables (used for integration/E2E tests)

# Database (docker-compose.test Postgres)
DATABASE_URL=postgres://guard:guard@localhost:5544/guard_test?sslmode=disable

# Cache (docker-compose.test Valkey/Redis)
REDIS_ADDR=localhost:6481
REDIS_DB=0

# Auth
JWT_SIGNING_KEY=test-jwt-secret
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=720h

# App
APP_ENV=test
APP_ADDR=:8081
PUBLIC_BASE_URL=http://localhost:8081

# Email (tests usually use fake sender; values here are placeholders)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=no-reply@test.local
EMAIL_PROVIDER=smtp

# WorkOS (SSO) â€“ typically stored in app_settings for tests; left blank by default
WORKOS_API_KEY=
WORKOS_CLIENT_ID=
WORKOS_CLIENT_SECRET=
